{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable"],
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "jsx": "preserve",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@webiny/api-cookie-policy/*": ["./packages/api-cookie-policy/src/*"],
      "@webiny/api-cookie-policy": ["./packages/api-cookie-policy/src"],
      "@webiny/api-files/*": ["./packages/api-files/src/*"],
      "@webiny/api-files": ["./packages/api-files/src"],
      "@webiny/api-form-builder/*": ["./packages/api-form-builder/src/*"],
      "@webiny/api-form-builder": ["./packages/api-form-builder/src"],
      "@webiny/api-page-builder/*": ["./packages/api-page-builder/src/*"],
      "@webiny/api-page-builder": ["./packages/api-page-builder/src"],
      "@webiny/api-i18n/*": ["./packages/api-i18n/src/*"],
      "@webiny/api-i18n": ["./packages/api-i18n/src"],
      "@webiny/api/*": ["./packages/api/src/*"],
      "@webiny/api": ["./packages/api/src"],
      "@webiny/app/*": ["./packages/app/src/*"],
      "@webiny/app": ["./packages/app/src"],
      "@webiny/app-admin/*": ["./packages/app-admin/src/*"],
      "@webiny/app-admin": ["./packages/app-admin/src"],
      "@webiny/app-page-builder/*": ["./packages/app-page-builder/src/*"],
      "@webiny/app-security/*": ["./packages/app-security/src/*"],
      "@webiny/app-i18n/*": ["./packages/app-i18n/src/*"],
      "@webiny/storybook-utils": ["./packages/storybook-utils/src"],
      "@webiny/storybook-utils/*": ["./packages/storybook-utils/src/*"],
      "@webiny/form": ["./packages/form/src"],
      "@webiny/form/*": ["./packages/form/src/*"],
      "@webiny/plugins": ["./packages/plugins/src"],
      "@webiny/plugins/*": ["./packages/plugins/src/*"],
      "@webiny/validation/*": ["./packages/validation/src/*"],
      "@webiny/ui/*": ["./packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "**/__tests__/**"]
}
