{
  "extends": "../../tsconfig",
  "exclude": [
    "node_modules",
    "./dist",
    "**/__tests__/**",
    "../storybook-utils",
    "../form",
    "../validation"
  ],
  "references": [
    { "path": "../form" },
    { "path": "../storybook-utils" },
    { "path": "../validation" }
  ],
  "compilerOptions": {
    "paths": {
      "@webiny/form/*": ["../form/src/*"],
      "@webiny/form": ["../form/src"],
      "@webiny/storybook-utils/*": ["../storybook-utils/src/*"],
      "@webiny/storybook-utils": ["../storybook-utils/src"],
      "@webiny/validation/*": ["../validation/src/*"],
      "@webiny/validation": ["../validation/src"]
    },
    "baseUrl": "."
  }
}
